generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(cuid())
  name              String?
  email             String?             @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  createdAt         DateTime            @default(now())
  status            String?             @default("active")
  verifyToken       String?             @unique
  verifyCode        String?
  verifyExpires     DateTime?
  accounts          Account[]
  AuthChallenges    AuthChallenge[]
  EmailVerification EmailVerification[] @relation("UserEmailVerification")
  Favorite          Favorite[]
  Ingredient        Ingredient[]
  Menu              Menu[]
  passkeys          Passkey[]
  PasswordReset     PasswordReset[]
  sessions          Session[]
  TrustedDevice     TrustedDevice[]
  UsageHistory      UsageHistory[]
}

/// 仮登録ユーザー（メール検証待ち）
model PendingUser {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  password     String?  // hashed password
  token        String?  @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  // EmailVerification が pendingUserId を参照する可能性がある
  EmailVerification EmailVerification[]
}

/// WebAuthn passkey representation
model Passkey {
  id           String   @id @default(cuid())
  userId       String
  credentialId String   @unique
  publicKey    String
  signCount    Int
  transports   String?
  name         String?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/// Short-lived stored challenges for webauthn (authenticate without email flow)
model AuthChallenge {
  id        String    @id @default(cuid())
  challenge String    @unique
  userId    String?
  used      Boolean   @default(false)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailVerification {
  id             String    @id @default(cuid())
  userId         String?                   // legacy / post-verify: references User.id
  pendingUserId  String?                   // new: references PendingUser.id (pre-verify)
  tokenHash      String    @unique
  code           String
  expiresAt      DateTime
  used           Boolean   @default(false)
  createdAt      DateTime  @default(now())
  user           User?     @relation("UserEmailVerification",fields: [userId], references: [id], onDelete: Cascade)
  pendingUser    PendingUser? @relation(fields: [pendingUserId], references: [id], onDelete: Cascade)
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TrustedDevice {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String
  deviceInfo String?
  createdAt  DateTime @default(now())
  lastUsed   DateTime @default(now())
  expiresAt  DateTime
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tokenHash])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  menuId    String?
  title     String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Ingredient {
  id        String    @id @default(cuid())
  userId    String
  name      String
  quantity  Float     @default(0)
  unit      String?
  expiry    DateTime?
  category  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Menu {
  id          String   @id @default(cuid())
  userId      String
  title       String
  difficulty  String?
  time        String?
  tips        String?
  ingredients Json?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UsageHistory {
  id     String   @id @default(cuid())
  userId String
  date   DateTime @default(now())
  action String
  meta   Json?
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
